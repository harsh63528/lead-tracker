{
  "manifest_version": 3,
  "name": "Collector",
  "version": "1.0.3",
  "description": "Easily collect and save URLs from the address bar into local storage.",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "action": {
    "default_title": "URL Collector",
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
